{
  "name": "@mojaloop/settlements-bc-event-handler-svc",
  "version": "0.1.0",
  "description": "Mojaloop vNext Settlements BC - Event Handler Service",
  "license": "Apache-2.0",
  "homepage": "https://github.com/mojaloop/settlements-bc/event-handler-svc",
  "private": true,
  "bugs": {
    "url": "https://github.com/mojaloop/settlements-bc/issues#readme"
  },
  "contributors": [
    "Pedro Sousa Barreto <pedrosousabarreto@gmail.com>"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "start": "npm run service",
    "start:dev": "npm run build && AUDIT_KEY_FILE_PATH=./dist/tmp_audit_key_file npm run service",
    "service": "node dist/index.js",
    "build": "tsc",
    "watch": "tsc -w",
    "clean:npm": "rm -Rf node_modules",
    "clean": "rm -Rf dist",
    "pretest": "npm run build",
    "standard": "npm run lint",
    "lint": "npm run build && npx eslint ./src",
    "lint:fix": "npm run build && npx eslint ./src --fix",
    "test:unit": "jest --passWithNoTests --testMatch '**/test/unit/**/*.test.ts'",
    "dep:check": "ncu -e 2",
    "dep:update": "ncu -u"
  },
  "dependencies": {
    "@mojaloop/settlements-bc-domain-lib": "*",
    "@mojaloop/auditing-bc-client-lib": "~0.0.11",
    "@mojaloop/auditing-bc-public-types-lib": "~0.0.12",
    "@mojaloop/logging-bc-client-lib": "~0.1.18",
    "@mojaloop/logging-bc-public-types-lib": "~0.1.15",
    "@mojaloop/platform-configuration-bc-public-types-lib": "~0.2.2",
    "@mojaloop/platform-configuration-bc-client-lib": "~0.1.19",
    "@mojaloop/platform-shared-lib-messaging-types-lib": "~0.2.73",
    "@mojaloop/platform-shared-lib-nodejs-kafka-client-lib": "~0.3.34",
    "@mojaloop/security-bc-public-types-lib": "~0.1.15"
  },
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.5",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "npm-check-updates": "^16.3.11",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  }
}
